{% extends 'admin/base.html.twig' %}

{% block content_title %}
    {{ 'admin.contact.index.title'|trans }}
{% endblock %}


{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ 'admin.contact.common.title'|trans }}</th>
                        <th>{{ 'admin.contact.common.user'|trans }}</th>
                        <th>{{ 'common.table.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.title }}</td>
                            <td>
                                {{ contact.displayName }}
                            </td>
                            <td>
                                <a href="{{ path('admin_contact_show', {'id': contact.id}) }}" class="btn btn-info">
                                    {{ 'common.button.detail'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% include 'admin/common/_pagination.html.twig' with {'list': contacts} %}
            </div>
        </div>
    </div>
{% endblock %}
