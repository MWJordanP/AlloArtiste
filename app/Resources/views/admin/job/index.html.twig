{% extends 'admin/base.html.twig' %}

{% block content_title %}
    {{ 'admin.job.index.title'|trans }}
    <a href="{{ path('admin_job_create') }}" class="btn btn-primary pull-right">
        {{ 'admin.job.create.title'|trans }}
    </a>
{% endblock %}


{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ 'admin.job.index.table.name'|trans }}</th>
                        <th>{{ 'common.table.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                        <tr>
                            <td>{{ job.name }}</td>
                            <td>
                                <a href="{{ path('admin_job_edit', {'id': job.id}) }}" class="btn btn-warning">
                                    {{ 'common.button.edit'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% include 'admin/common/_pagination.html.twig' with {'list': jobs} %}
            </div>
        </div>
    </div>
{% endblock %}
